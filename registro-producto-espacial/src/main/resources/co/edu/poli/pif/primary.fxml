<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.poli.pif.vista.PrimaryController">

    <!-- Título + botones -->
    <top>
        <VBox spacing="10">
            <Label text="Registro de Producto Espacial">
                <padding>
                    <Insets top="15" left="20" />
                </padding>
                <style>
                    -fx-font-size: 22px;
                    -fx-font-weight: bold;
                </style>
            </Label>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <padding>
                    <Insets left="20" right="20" bottom="10" />
                </padding>
                <Button fx:id="btnNuevo" text="Nuevo" onAction="#onNuevo"/>
                <Button fx:id="btnEditar" text="Editar" onAction="#onEditar"/>
                <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar"/>
                <Button fx:id="btnRefrescar" text="Refrescar" onAction="#onRefrescar"/>
            </HBox>
        </VBox>
    </top>

    <!-- Centro: tabla + formulario -->
    <center>
        <SplitPane dividerPositions="0.45">
            <items>
                <!-- Tabla -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" left="20" bottom="20" right="10" />
                    </padding>
                    <TableView fx:id="tblProductos" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>
                            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="80"/>
                            <TableColumn fx:id="colMasa" text="Masa (kg)" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Formulario -->
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" left="10" bottom="20" right="20" />
                    </padding>

                    <Label text="Nuevo Producto">
                        <style>
                            -fx-font-size: 18px;
                            -fx-font-weight: bold;
                        </style>
                    </Label>

                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="40"/>
                            <ColumnConstraints percentWidth="60"/>
                        </columnConstraints>

                        <children>
                            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbTipo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Masa (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtMasa" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Volumen (m³):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtVolumen" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Cantidad:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtCantidad" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Label text="Fecha de Caducidad:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtFechaCaducidad" promptText="dd/MM/yyyy"
                                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                            <Label text="Nivel de Criticidad:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbNivelCriticidad" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                            <Label text="Observaciones:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                            <TextArea fx:id="txtObservaciones" GridPane.rowIndex="7" GridPane.columnIndex="1"
                                      prefRowCount="3"/>
                        </children>
                    </GridPane>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Guardar" onAction="#onGuardar"/>
                        <Button text="Cancelar" onAction="#onCancelar"/>
                    </HBox>
                </VBox>
            </items>
        </SplitPane>
    </center>

</BorderPane>
