<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.poli.pif.vista.PrimaryController">

    <top>
        <Label text="Registro de Productos Espaciales"
               style="-fx-font-size:22px; -fx-font-weight:bold; -fx-padding: 15 15 15 15;" />
    </top>

    <left>
        <VBox spacing="8">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <children>
                <Label text="ID:"/>
                <TextField fx:id="txtId" promptText="ID (ingresado manualmente)"/>

                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre"/>

                <Label text="Tipo de Producto:"/>
                <ComboBox fx:id="cmbTipo"/>

                <Label text="Masa (kg):"/>
                <TextField fx:id="txtMasa"/>

                <Label text="Volumen (m3):"/>
                <TextField fx:id="txtVolumen"/>

                <Label text="Cantidad:"/>
                <TextField fx:id="txtCantidad"/>

                <Label text="Fecha Caducidad:"/>
                <TextField fx:id="txtFechaCaducidad" promptText="YYYY-MM-DD"/>

                <Label text="Nivel Criticidad:"/>
                <ComboBox fx:id="cmbNivelCriticidad"/>

                <Label text="Observaciones:"/>
                <TextArea fx:id="txtObservaciones" prefRowCount="3"/>

                <HBox spacing="10">
                    <children>
                        <Button text="Guardar" onAction="#onGuardar"/>
                        <Button text="Editar" onAction="#onEditar"/>
                    </children>
                </HBox>

                <HBox spacing="10">
                    <children>
                        <Button text="Eliminar" onAction="#onEliminar" style="-fx-text-fill: red;"/>
                        <Button text="Limpiar" onAction="#onLimpiar"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </left>

    <center>
        <VBox>
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

            <children>

                <TableView fx:id="tblProductos" prefHeight="500">
                    <columns>

                        <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150"/>
                        <TableColumn fx:id="colTipo" text="Tipo" prefWidth="100"/>

                        <TableColumn fx:id="colMasa" text="Masa (kg)" prefWidth="90"/>
                        <TableColumn fx:id="colVolumen" text="Volumen" prefWidth="90"/>

                        <TableColumn fx:id="colFechaCaducidad" text="Caducidad" prefWidth="110"/>
                        <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="90"/>
                        <TableColumn fx:id="colNivelCriticidad" text="Criticidad" prefWidth="110"/>
                        <TableColumn fx:id="colObservaciones" text="Observaciones" prefWidth="180"/>

                    </columns>
                </TableView>

            </children>
        </VBox>
    </center>

</BorderPane>
